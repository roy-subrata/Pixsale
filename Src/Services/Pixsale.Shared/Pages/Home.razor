@page "/"
@using Pixsale.Shared.Services
@inject IFormFactor FormFactor

<PageTitle>Home</PageTitle>

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Welcome to MAUI Blazor with Tailwind v4</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="p-4 bg-gray-100 rounded-lg shadow">
            <p class="text-lg">Product Card 1</p>
            <button class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">View Details</button>
        </div>
        <div class="p-4 bg-gray-100 rounded-lg shadow">
            <p class="text-lg">Product Card 2</p>
            <button class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">View Details</button>
        </div>
    </div>
</div>

Welcome to your new app running on <em>@factor</em> using <em>@platform</em>.

@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}
