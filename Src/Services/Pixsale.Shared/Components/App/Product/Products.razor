@page "/product-list"
@inject NavigationManager NavigationManager

<!-- Header -->
<div class="bg-purple-700 text-white flex items-center justify-between px-4 py-3">
	<button @onclick="GoBack" class="text-2xl">←</button>
	<h1 class="text-lg font-semibold">Product List</h1>
	<button class="text-2xl">⋮</button>
</div>

<!-- Search -->
<div class="p-4">
	<input type="text"
		   placeholder="Search"
		   class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400"
		   @bind="searchText" />
</div>

<!-- Product Card -->
<div class="px-4">
	<div class="flex items-center justify-between bg-purple-100 p-4 rounded-lg">
		<div class="flex items-center space-x-3">
			<img src="https://via.placeholder.com/50x50.png?text=No+Image"
				 alt="Product"
				 class="w-12 h-12 rounded-full" />
			<div>
				<p class="text-sm font-semibold">super v</p>
				<p class="text-xs text-gray-600">Stock : 14</p>
			</div>
		</div>
		<div class="flex items-center space-x-4">
			<p class="text-sm font-semibold">৳ 150</p>
			<button class="text-2xl">⋮</button>
		</div>
	</div>
</div>

<!-- Add New Product Button -->
<div class="fixed bottom-4 left-0 right-0 px-4">
	<button @onclick="AddNewProduct"
			class="w-full bg-purple-700 text-white py-3 rounded-lg text-sm font-medium shadow-md hover:bg-purple-800">
		Add New Product +
	</button>
</div>

@code {
	private string searchText;

	private void GoBack()
	{
		NavigationManager.NavigateTo("/"); // Or use your intended back route
	}

	private void AddNewProduct()
	{
		NavigationManager.NavigateTo("/add-product");
	}
}
